{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "rsvp",
  "type": "object",
  "required": ["accepted", "guests"],
  "properties": {
    "accepted": {
      "type": "boolean"
    },
    "guests": {
      "type": "array",
      "items": { "$ref": "#/definitions/guest" },
      "maxItems": 10,
      "minItems": 1
    }
  },
  "definitions": {
    "guest": {
      "type": "object",
      "required": ["firstName", "lastName", "age"],
      "properties": {
        "firstName": {
          "type": "string",
          "minLength": 1,
          "maxLength": 20
        },
        "lastName": {
          "type": "string",
          "minLength": 1,
          "maxLength": 20
        },
        "age": {
          "type": "string",
          "minLength": 1,
          "maxLength": 6
        }
      }
    }
  }
}
